from transformers import pipeline
summarizer = pipeline("summarization")
text = input("Enter the text you want to summarize:\n")
word_count = len(text.split())
user_max_len = int(input("Enter maximum summary length (words): "))
max_len = min(user_max_len, word_count)
min_len = max(10, int(0.3 * max_len))
summary = summarizer(
    text,
    max_length=max_len,
    min_length=min_len,
    do_sample=False
)
print("\n--- Summary ---")
print(summary[0]['summary_text'])
